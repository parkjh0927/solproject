<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.MemberMapper">

	<!-- 회원가입 -->
	<insert id="register">
		insert into member(userid,password,email,postcode,address,address2) 
		values(#{userid},#{password},#{email},#{postcode,jdbcType=INTEGER},#{address,jdbcType=VARCHAR},#{address2,jdbcType=VARCHAR})
	</insert>
	
	<insert id="registerAuth">
		insert into member_auth(userid,authority) 
		values(#{userid},#{authority})
	</insert>

	
	<!-- 회원조회 : 로그인 -->
	<resultMap type="com.spring.domain.MemberDTO" id="memberDTO">
		<id property="userid" column="userid"/>
		<result property="password" column="password"/>
		<result property="email" column="email"/>
		<result property="postcode" column="postcode"/>
		<result property="address" column="address"/>
		<result property="address2" column="address2"/>
		<result property="enabled" column="enabled"/>
		<collection property="authorities" resultMap="authorities"/>
	</resultMap>
	
	<resultMap type="com.spring.domain.MemberAuthorityDTO" id="authorities">
		<result property="userid" column="userid"/>
		<result property="authority" column="authority"/>
	</resultMap>
	
	<select id="read" resultMap="memberDTO">
		select s1.userid,password,enabled,authority
		from member s1 left outer join member_auth s2 on s1.userid = s2.userid
		where s1.userid = #{userid}	
	</select>
	
	
		
	<!-- 중복 아이디 체크	 -->
	<select id="dupId" resultType="java.lang.Integer">
		select count(*) from member where userid=#{userid}
	</select>
	
	
	<!-- 회원탈퇴 -->
	<delete id="leave">
		delete from member where userid=#{userid}
	</delete>
	
	
	

</mapper>






